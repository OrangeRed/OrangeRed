---
import type { IAvatar } from "@src/env"

import { ABOUT_ME } from "@src/Data"
const { description, title, currentJob } = ABOUT_ME

export interface Props {
  image: IAvatar
}

const { image } = Astro.props
---

<section
  class="flex flex-col md:flex-row justify-between items-center md:mt-8 px-3 mb-8"
>
  <img
    class="h-60 w-60 rounded-full object-cover shadow-black shadow-xl"
    src={image.src}
    alt="Dmitriy_Kagno_Avatar"
  />
  <div class="flex flex-col items-start md:items-center py-8 w-full">
    <div class="flex justify-start md:justify-center w-full">
      <h1
        class="flex justify-center text-4xl sm:text-5xl pb-2 border-b-2 border-orange-400"
      >
        <img src="/hand_wave.gif" class="h-10 sm:h-11 mr-3" />
        <span class="tracking-wide">{title}</span>
      </h1>
    </div>
    <ol class="text-base sm:list-[circle] list-inside">
      {
        description.map((line) => {
          return (
            <li class="ml-2 md:ml-16 my-3 tracking-wide">
              {!line.includes("@") ? (
                line
              ) : (
                <>
                  {line.slice(0, line.indexOf("@"))}
                  <a
                    class="text-sky-400 hover:text-sky-600"
                    href={currentJob.url}
                    target="_blank"
                    rel="noreferrer"
                  >
                    @{currentJob.name}
                  </a>
                </>
              )}
            </li>
          )
        })
      }
    </ol>
  </div>
</section>
