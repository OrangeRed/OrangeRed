---
import Link from "./Link.astro"
import { Icon } from "astro-icon"

interface Props {
  class?: string
}

const { class: classNames } = Astro.props
---

<ul class:list={["flex w-full list-none justify-end gap-5", classNames]}>
  <!-- Github -->
  <Link url="https://github.com/OrangeRed" title="github">
    <Icon class="h-5 w-5" name="fa:github" />
    <slot name="github" slot="text" />
  </Link>

  <!-- Linkedin -->
  <Link url="https://linkedin.com/in/dmitriy-kagno/" title="linkedin">
    <Icon class="h-5 w-5" name="fa-brands:linkedin-in" />
    <slot name="linkedin" slot="text" />
  </Link>

  <!-- Resume -->
  <Link url="/Resume_Dmitriy_Kagno.pdf" title="resume">
    <Icon class="h-5 w-5" name="fa:file" />
    <slot name="resume" slot="text" />
  </Link>
</ul>
